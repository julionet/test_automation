{
  "version": "1.0.0",
  "application": {
    "name": "Notepad",
    "path": "C:\\Windows\\System32\\notepad.exe",
    "arguments": "",
    "startup_delay": 2,
    "backend": "uia",
    "timeout": 10
  },
  "test_suites": [
    {
      "name": "Testes Básicos do Notepad",
      "description": "Suite de testes para verificar funcionalidades básicas do Notepad",
      "test_cases": [
        {
          "id": "TC001",
          "name": "Teste de Digitação",
          "description": "Verifica se é possível digitar texto no Notepad",
          "enabled": true,
          "tags": ["basico", "edicao"],
          "actions": [
            {
              "type": "wait",
              "description": "Aguardar aplicação carregar completamente",
              "duration": 2
            },
            {
              "type": "screenshot",
              "description": "Capturar tela inicial"
            },
            {
              "type": "type_text",
              "description": "Digitar texto de teste no editor",
              "control": "Edit",
              "value": "Este é um teste automatizado!",
              "screenshot_on_success": true
            },
            {
              "type": "wait",
              "description": "Aguardar texto ser digitado",
              "duration": 1
            }
          ]
        },
        {
          "id": "TC002",
          "name": "Teste de Menu Arquivo",
          "description": "Verifica acesso ao menu Arquivo",
          "enabled": true,
          "tags": ["menu", "navegacao"],
          "actions": [
            {
              "type": "click",
              "description": "Clicar no menu Arquivo",
              "control": "Arquivo",
              "screenshot_on_success": true
            },
            {
              "type": "wait",
              "description": "Aguardar menu abrir",
              "duration": 1
            },
            {
              "type": "screenshot",
              "description": "Capturar menu aberto"
            },
            {
              "type": "type_text",
              "description": "Pressionar ESC para fechar menu",
              "control": "Edit",
              "value": "{ESC}"
            }
          ]
        },
        {
          "id": "TC003",
          "name": "Teste de Diálogo Sair sem Salvar",
          "description": "Verifica diálogo ao tentar sair sem salvar",
          "enabled": true,
          "tags": ["dialogo", "salvar"],
          "actions": [
            {
              "type": "type_text",
              "description": "Digitar algum texto",
              "control": "Edit",
              "value": "Texto para testar diálogo"
            },
            {
              "type": "wait",
              "description": "Aguardar",
              "duration": 1
            },
            {
              "type": "click",
              "description": "Fechar aplicação",
              "control": "Fechar",
              "continue_on_failure": true
            },
            {
              "type": "wait",
              "description": "Aguardar diálogo aparecer",
              "duration": 2
            },
            {
              "type": "screenshot",
              "description": "Capturar diálogo de confirmação",
              "screenshot_on_success": true
            },
            {
              "type": "click",
              "description": "Clicar em 'Não salvar'",
              "control": "Não Salvar",
              "window_title": "Notepad",
              "continue_on_failure": true
            }
          ]
        }
      ]
    }
  ]
}